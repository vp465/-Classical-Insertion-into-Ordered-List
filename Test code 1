// Define your Q# operation
operation InsertIntoSortedList(sortedList : Int[], element : Int) : String {
    mutable i = 0;
    mutable found = false;

    // Use repeat-until-success pattern
    repeat {
        if (i == Length(sortedList) or sortedList[i] > element) {
            set found = true;
        } else {
            set i = i + 1;
        }
    } until (found or i == Length(sortedList));

    // Insert the element into the list
    let updatedList = sortedList[0 .. i] + [element] + sortedList[i .. Length(sortedList) - 1];
    return $"The list after insertion is: {updatedList}";
}

// Main entry point
operation Main() : Unit {
    // Define test list and element
    let testList = [1, 2, 3, 6, 7];
    let k = 5;

    // Call the Q# operation
    let result = InsertIntoSortedList(testList, k);
    Message(result);
}
